%h1 Listing answers

%table
  %thead
    %tr
      %th Text
      %th Question
      %th Is correct
      %th
      %th
      %th

  %tbody
    - @answers.each do |answer|
      %tr
        %td= answer.text
        %td= answer.question.text
        %td= answer.is_correct
        %td= link_to 'Show', exam_question_answer_path(answer.question.exam, answer.question, answer)
        %td= link_to 'Edit', edit_exam_question_answer_path(answer.question.exam, answer.question, answer)
        %td= link_to 'Destroy', exam_question_answer_path(answer.question.exam, answer.question, answer), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Answer', new_exam_question_answer_path(@question.exam, @question)
