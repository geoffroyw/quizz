= form_for @answer do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :question_id
    = f.text_field :question_id
  .field
    = f.label :is_correct
    = f.check_box :is_correct
  .actions
    = f.submit 'Save'
