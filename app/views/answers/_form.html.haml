= form_for [@question.exam, @question, @answer] do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :question
    = f.collection_select(:question_id, Question.all, :id, :text)
  .field
    = f.label :is_correct
    = f.check_box :is_correct
  .actions
    = f.submit 'Save'
