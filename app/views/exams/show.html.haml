%p#notice= notice

.page-header
  %h1= @exam.name
.well
  %p= @exam.intro_text

-unless @errors.nil?
  -unless @errors.any?
    .alert.alert-success{:role => 'alert'}
      %strong= t('exam.answer.congrats.head')
      =t('exam.answer.congrats.message')

= form_tag(validate_exam_path(@exam), method: :post) do
  - @exam.questions.each do |question|
    = render 'question', :question => question
  =submit_tag(t('exam.answer.action'), :class => 'btn btn-sm btn-success')

%br
%br
-if user_signed_in?
  = link_to t('exam.edit.name'), edit_exam_path(@exam)
  \|
= link_to t('back'), exams_path
