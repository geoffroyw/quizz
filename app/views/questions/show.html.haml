%p#notice= notice


.row
  .col-md-12
    %h1
      =t('exam.name')
      =@question.exam.name

    %h2
      =t('question.name')
      =@question.text

    %p
      =t('question.answer.list')

    -if @question.has_only_false_answer
      .alert.alert-warning{:role => 'alert'}
        %strong=t('warning')
        =t('question.answer.no_correct')

    %table.table.table-striped
      %thead
        %tr
          %th=t('answer.name')
          %th=t('answer.is_correct')
          %th=t('actions')

      %tbody
        - @question.answers.each do |answer|
          %tr
            %td= answer.text
            %td= answer.is_correct
            %td
              = link_to edit_exam_question_answer_path(answer.question.exam, answer.question, answer) do
                %span.glyphicon.glyphicon-pencil
              = link_to exam_question_answer_path(answer.question.exam, answer.question, answer), :method => :delete, :data => { :confirm => 'Are you sure?' } do
                %span.glyphicon.glyphicon-trash

= link_to t('question.edit.action'), edit_exam_question_path(@question.exam, @question)
\|
= link_to t('question.answer.add'), new_exam_question_answer_path(@question.exam, @question)
\|
= link_to t('backExam'), exam_path(@question.exam)
